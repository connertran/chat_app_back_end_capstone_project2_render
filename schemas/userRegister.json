{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "username": {
      "type": "string",
      "minLength": 1,
      "maxLength": 30
    },
    "password": {
      "type": "string",
      "minLength": 5,
      "maxLength": 30
    },
    "firstName": {
      "type": "string",
      "minLength": 1,
      "maxLength": 30
    },
    "lastName": {
      "type": "string",
      "minLength": 1,
      "maxLength": 30
    },
    "gmailAddress": {
      "type": "string",
      "minLength": 6,
      "maxLength": 70,
      "format": "email"
    },
    "bio": {
      "type": "string"
    }
  },
  "required": [
    "username",
    "password",
    "firstName",
    "lastName",
    "gmailAddress",
    "bio"
  ]
}
